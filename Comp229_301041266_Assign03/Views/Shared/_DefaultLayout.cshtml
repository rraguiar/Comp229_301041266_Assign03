<!DOCTYPE html>

<html class="page">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <style>        .input-validation-error {
            border-color: red;
            background-color: #fee;
        }
    </style>
</head>
<body>
    <header>
        <div id="logo"><img src="~/images/logo-resized.png" asp-append-version="true" /></div>
        <div id="welcomeTitle">
            <h1>
                eatME Recipes - Cooking is FUN!!!
            </h1>
            <nav>
                <ul>
                    <li><a class="navigationLinks" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="navigationLinks" asp-controller="Recipe" asp-action="RecipeAdd">Share your Recipe</a></li>
                    <li><a class="navigationLinks" asp-controller="Recipe" asp-action="List">See all Recipes</a></li>
                    <li><a class="navigationLinks" asp-controller="Account" asp-action="Login">Profile</a></li>
                    <li><a class="navigationLinks" href="mailto:johndoe@centennialcollege.ca">Contact</a></li>
                </ul>
            </nav>
        </div>
    </header>
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        <div id="allPage">
            @RenderBody()
        </div>
        <footer id="pageFooter">
            <nav>
                <ul>
                    <li><a class="navigationLinks" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a class="navigationLinks" href="mailto:johndoe@centennialcollege.ca">Contact</a></li>
                </ul>
            </nav>
            <p id="copyright">
                &copy;&nbsp;Copyright Rafael Rodrigues de Aguiar - Student# 301041266 - COMP229 - Assignment 1
                <span class="credits"> Logo made by <a href="https://www.designevo.com/logo-maker/" title="Free Online Logo Maker">DesignEvo free logo creator</a></span>
            </p>
        </footer>
    </body>
</html>
