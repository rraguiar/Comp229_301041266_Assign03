@model Comp229_301041266_Assign03.Models.ReviewRecipe
@{
    ViewBag.Title = "Add your Review";
}
<div class="p-2 row">
    <div class="col">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="col-2">
        <a class="btn btn-light btn-outline-dark" asp-action="..\Account\Logout" asp-controller="Account">Logout</a>
    </div>
</div>
<form asp-action="ReviewAdd" method="Post">
    @if (Model != null)
    {
        <input type="hidden" asp-for="RecipeNumber" value="@Model.RecipeNumber" />
    }
    <div>
        <label asp-for="ReviewContent">Review:</label>
        <div><span asp-validation-for="ReviewContent" class="text-danger"></span></div>
        <input asp-for="ReviewContent" />
    </div>
    <br />
    <div>
        <button class="btn btn-light btn-outline-dark" type="submit">Save Review</button>
        <button class="btn btn-light btn-outline-dark" type="reset">Clear Fields</button>
        <button class="btn btn-light btn-outline-dark" asp-action="List">Cancel</button>
    </div>
</form>